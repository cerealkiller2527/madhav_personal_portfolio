# Copy this file to .env and add your actual values

# Notion Integration
# Create an integration at https://www.notion.so/my-integrations
NOTION_TOKEN=notion_token_here

# Notion Database IDs
# Copy these from your Notion database URLs
NOTION_DATABASE_ID=blog_database_id_here
NOTION_PROJECTS_DATABASE_ID=projects_database_id_here
NOTION_EXPERIENCES_DATABASE_ID=experiences_database_id_here

# Site Configuration
# Your public site URL - update this when you deploy
NEXT_PUBLIC_SITE_URL=https://domain.com

# Your email for RSS feeds and metadata
AUTHOR_EMAIL=email@example.com

# Giscus Comments (Optional)
# Set up at https://giscus.app/ to enable comments on your blog posts
NEXT_PUBLIC_GISCUS_REPO=username/your-repository
NEXT_PUBLIC_GISCUS_REPO_ID=repo_id_here
NEXT_PUBLIC_GISCUS_CATEGORY=General
NEXT_PUBLIC_GISCUS_CATEGORY_ID=category_id_here
